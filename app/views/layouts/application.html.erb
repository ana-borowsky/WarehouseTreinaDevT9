<!DOCTYPE html>
<html>
  <head>
    <title>WarehouseApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application" %>
  </head>
  <body>
    <header>
      <%= link_to root_path do %>
      <h1>Galp√µes & Estoque</h1>
      <% end %>
      <nav>
      <%= link_to 'Fornecedores', suppliers_path %> |
      <%= link_to 'Modelos de produtos', product_models_path %> |
      <%= link_to 'Registrar pedido', new_order_path %> |
      <%= link_to 'Meus pedidos', orders_path %>

      <%= form_with(url: search_orders_path, method: :get) do |f| %>
        <%= f.label :query, 'Buscar pedido' %>
        <%= f.text_field :query %>
        <%= f.submit 'Buscar' %>
      <% end %>

      <% if user_signed_in? %>
        <%= current_user.description %>
          <br> <%= button_to 'Log out', destroy_user_session_path, method: :delete %>
      <% else %>
          <%= link_to 'Log in', new_user_session_path %>
      <% end %>
      </nav>
    </header>
    <main>
      <div>
        <%= alert %>
        <%= notice %>
      </div>
    <%= yield %>
    </main>
  </body>
</html>
