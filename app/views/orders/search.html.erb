<p>
  <%= I18n.translate("hello") %>
</p>
<p>
  <%= I18n.localize(Date.today) %>
</p>
<h2>Resultado da busca por: <%= @code %></h2>
<p><%= @orders.count %> <%= Order.model_name.human(count: @orders.count).downcase %> <%= I18n.translate(:found, count: @orders.count) %></p>

<% @orders.each do |order| %>
  <dl>
    <dt><%= Order.human_attribute_name(:code) %>:</dt>
    <dd><%= order.code.name %></dd>
    <dt><%= Order.human_attribute_name(:warehouse_id) %></dt>
    <dd><%= order.warehouse.full_description %>:</dd>
    <dt><%= Order.human_attribute_name(:supplier_id) %></dt>
    <dd><%= order.supplier.corporate_name %>:</dd>
    <dt><%= Order.attribute_name(:user_id) %>:</dt>
    <dt><%= order.user.description %></dt>
    <dt><%= Order.attribute_name(:estimated_delivery_date) %>:</dt>
    <dd><%= I18n.localize(order.estimated_delivery_date) %></dd>
  </dl>
<% end %>